{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@page/*": ["pages/*"],
      "@/*": ["./*"]
    },
    "types": [
      "node",
      "playwright"
    ],
    "lib": [
      "dom",
      "ES2020"
    ]
  },
  "include": [
    "tests/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts",
    "config/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}