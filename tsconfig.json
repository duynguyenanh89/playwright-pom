{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true, // Enable JSON module imports
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/pages/*": ["./pages/*"],
      "@/data/*": ["./data/*"],
      "@/tests/*": ["./tests/*"]
    },
    "types": [
      "node",
      "playwright"
    ],
    "lib": [
      "dom",
      "ES2020"
    ]
  },
  "include": [
    "tests/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts",
    "config/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}